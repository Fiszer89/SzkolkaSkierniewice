@model IEnumerable<SzkolkaSkierniewice.Domain.Entities.DrzewoAlejowe>

@{
    ViewBag.Title = "Lista drzew alejowych";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <h3>Drzewa alejowe</h3>
    </div>
    <div class="panel panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                   Data dodania
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>               
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PriceAfterDicount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeightMin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeightMax)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WidthMin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WidthMax)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Available)
                </th>
                <th>
                    Akcje
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Name, "EditDrzewoAlejowe", new { item.ProductID})
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @item.Price.ToString("c")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        @item.PriceAfterDicount.ToString("c")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HeightMin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HeightMax)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WidthMin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WidthMax)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Available)
                    </td>
                    <td>
                        @using (Html.BeginForm("DeleteDrzewoAlejowe", "Admin"))
                        {
                            @Html.Hidden("ProductID", item.ProductID)
                            <input type="submit" value="Usuń" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel panel-footer">
        @Html.ActionLink("Dodaj nowe drzewo alejowe", "CreateDrzewoAlejowe", null, new { @class = "btn btn-default"})
    </div>
</div>