@model IEnumerable<SzkolkaSkierniewice.Domain.Entities.Box>

@{
    ViewBag.Title = "Lista doniczek";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel panel-heading">
        <h3>Pojemniki</h3>
    </div>
    <div class="panel panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Akcje
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Name, "EditBox", new { item.BoxID })
                    </td>
                    <td>
                        @using (Html.BeginForm("DeleteBox", "Admin"))
                        {
                            @Html.Hidden("boxID", item.BoxID)
                            <input type="submit" value="Usuń" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel panel-footer">
        @Html.ActionLink("Dodaj nowy pojemnik", "CreateBox", null, new { @class = "btn btn-default" })
    </div>
</div>

